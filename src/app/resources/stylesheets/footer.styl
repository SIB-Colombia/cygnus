#footer-zone
	visibility hidden
#footer-zone.affix
	bottom 0px
	top initial
	z-index 10
	visibility visible
.footer-wrapper
	margin-top 20px
	background #000000
	color #FFFFFF
	font-size 12px
	padding 12px 0
	position relative
footer
	font-size .85em
	margin 0
	background url(/images/shadow_top_clear.png) top center no-repeat rgba(255,255,255,.9)
	line-height 1.5em
	padding 0
	display inline-block
	vertical-align bottom
	width 100%
	color #515254!important
	h3
		margin 6px 0
	ul.footer-menu
		list-style-type none
		margin 0
		padding 0
		li
			border-right 1px solid #FFFFFF
			display inline-block
			&:last-child
				border none
			a
				display block
				padding 0 15px
				color #FFFFFF
	.footer-right
		color white

.align-right
		tex-align right

.toggle-partners
.toggle-terms
	cursor pointer

.footer-modal
	position absolute
	z-index 10
	bottom 42px
	width 100%
	margin-bottom -10px
	opacity 0
	visibility hidden
.display-footer-modal
	visibility visible
	opacity 1
	margin-bottom 0
.footer-content
	color #333
	max-width 1000px
	margin auto
	background #FFF
	box-shadow 0 0 5px #666
	padding 25px
	.footer-content-top-wr
		h3
			display inline-block
			font-size 14px
			font-weight normal
			background-color #000
			color #fff
			padding 10px
			height 35px
