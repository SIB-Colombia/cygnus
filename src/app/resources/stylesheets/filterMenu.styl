@media (min-width 1200px)
	.sw-toggled
		#sidebar
			-webkit-transform translate3d(0,0,0) !important
			transform translate3d(0,0,0) !important
			opacity 1 !important
			filter: unquote("alpha(opacity=100)") !important
			box-shadow 0 1px 1px rgba(0,0,0,0.15)
#sidebar
	.sidebar-inner
		padding-bottom 30px
	position absolute
	background #fff
	box-shadow 0 0 10px rgba(51,51,51,0.38)
	//height calc(100% - 65px)
	-webkit-transform translate3d(-268px,0,0)
	transform translate3d(-268px,0,0)
	z-index 5
	width 280px
	overflow hidden
	opacity 0
	filter: unquote("alpha(opacity=0)")
	-webkit-transition all
	-o-transition all
	transition all
	-webkit-transition-duration 300ms
	transition-duration 300ms
	&.toggled
		-webkit-transform translate3d(0,0,0)
		transform translate3d(0,0,0)
		opacity 1
		filter unquote("alpha(opacity=100)")
#sidebar.affix
	top 50px
	position fixed
.main-menu
	list-style none
	padding-left 0
	margin 20px 0 0 0
	& > li.active
		& > a
			color #262626
			background-color #F4F4F4
	& > li
		& > a
			padding 14px 20px 14px 52px
			display block
			color #4C4C4C
			font-weight 500
			position relative
			text-transform uppercase
			color red
			&:hover
				color red
				background-color #e4e4e4
				text-decoration none
			& > i
				position absolute
				left 16px
				font-size 20px
				top 0
				width 25px
				text-align center
				padding 9px 0

.sub-menu
	&.toggled
		& > a:after
			content "\f273"
			-webkit-transform scale(1)
			-ms-transform scale(1)
			-o-transform scale(1)
			transform scale(1)
		& > a:before
			content "\f278"
			-webkit-transform scale(0)
			-ms-transform scale(0)
			-o-transform scale(0)
			transform scale(0)
	& > a
		position relative
		cursor pointer
	& > a:before
		content "\f278"
		-webkit-transform scale(1)
		-ms-transform scale(1)
		-o-transform scale(1)
		transform scale(1)
	& > a:after
		content "\f273"
		-webkit-transform scale(0)
		-ms-transform scale(0)
		-o-transform scale(0)
		transform scale(0)
	& > a:before
	& > a:after
		position absolute
		top 12px
		color #575757
		font-family 'Material-Design-Iconic-Font'
		font-size 17px
		right 15px
		-webkit-transition all
		-o-transition all
		transition all
		-webkit-transition-duration 250ms
		transition-duration 250ms
		-webkit-backface-visibility hidden
		-moz-backface-visibility hidden
		backface-visibility hidden
	ul
		list-style none
		display none
		padding 0
		& > li:first-child
			& > a
				padding-top 5px
		& > li:last-child
			& > a
				padding-bottom 16px
		& > li
			& > a
				color black
				padding 8px 20px 8px 50px
				font-weight 500
				display block
				&.active
				&:hover
					color red
					text-decoration none
	&.active
		& > ul
			display block
