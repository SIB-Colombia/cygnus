.container
	margin-right auto
	margin-left auto
	padding-left 15px
	padding-right 15px
#content
	padding 30px 0
	#list-results
		font-size 0.9em
		.ficha-taxonnombre
			font-size 1.5em
			font-style italic
			margin 3px 0
			font-weight 400
		.ficha-id
			font-size 14px
			font-style normal
			font-weight 600
		.ficha-autor
			color #888
		.ficha-title
			display inline-block
			background #ec5244
			color #fff
			padding 3px 6px
			font-weight normal
			margin 6px 0
		.specie-details
			font-size 1.1em
			em
				font-weight bold
		.specie-list
			padding-bottom 20px
			border-bottom 1px solid #ccc
			padding-top 20px
			line-height 1.3em
			#polaroid
				line-height 12px
				a
					background #fff
					display inline
					float left
					margin 0 0 27px 30px
					width auto
					padding 10px 10px 15px
					text-align center
					text-decoration: none
					color #333
					font-size 18px
					-webkit-box-shadow 0 3px 6px rgba(0,0,0,.25)
					-moz-box-shadow 0 3px 6px rgba(0,0,0,.25)
					-webkit-transform rotate(-2deg)
					-webkit-transition -webkit-transform .15s linear
					-moz-transform rotate(-2deg)
					-ms-transform rotate(-2deg)
					transform rotate(-2deg)
					&:hover
						-webkit-transform scale(1.1)
						-moz-transform scale(1.1)
						position relative
						z-index 5
					&:after
						//content attr(title)
						font-size 0.6em
			&:first-child
				padding-top 0px
			&:nth-child(even)
				#polaroid
					a
						-webkit-transform rotate(2deg)
						-moz-transform rotate(2deg)
						-ms-transform rotate(2deg)
						transform rotate(2deg)
						&:hover
							-webkit-transform scale(1.1)
							-moz-transform scale(1.1)
							position relative
							z-index 5
			&:nth-child(3n)
				#polaroid
					a
						-webkit-transform none
						-moz-transform none
						-ms-transform none
						transform none
						top -5px
						&:hover
							-webkit-transform scale(1.1)
							-moz-transform scale(1.1)
							position relative
							z-index 5
			&:nth-child(5n)
				#polaroid
					a
						-webkit-transform rotate(5deg)
						-moz-transform rotate(5deg)
						-ms-transform rotate(5deg)
						transform rotate(5deg)
						position relative
						right 5px
						&:hover
							-webkit-transform scale(1.1)
							-moz-transform scale(1.1)
							position relative
							z-index 5
			&:nth-child(8n)
				#polaroid
					a
						position relative
						top 8px
						right 5px
						&:hover
							-webkit-transform scale(1.1)
							-moz-transform scale(1.1)
							position relative
							z-index 5
			&:nth-child(11n)
				#polaroid
					a
						position relative
						top 3px
						left -5px
						&:hover
							-webkit-transform scale(1.5)
							-moz-transform scale(1.5)
							position relative
							z-index 5
		.pagination-control
			.pagination
				&>.active
					&>a
						color black
			.pagination-sm
				&>li
					&>a
						font-size 1.1em
						background-color transparent
						color #ec5244
						border none
						&:hover
							text-decoration underline
	#searchResultsHead
		padding-bottom 30px
		.search-filters-top
			font-size 16px
			padding-bottom 5px
		.search-filters-bottom
			border-top 10px solid #FFF
			border-bottom 5px solid #FFF
			font-size 14px
			a
				color #333
				&:active
				&:hover
					color #ec5244
					text-decoration none
			.search-filters-bottom-block
				display inline-block
				padding 2px 10px
				span
					padding-left 10px
					border-left 1px solid #000
					margin-left 10px
					&:first-child
						padding-left 0px
						border-left none
						margin-left 0px
					&.no-padding
						padding-left 0px
				select
					background transparent
					padding 5px
					font-size 16px
					line-height 1
					border 0
					border-radius 0
					height 34px
					font-weight 700
					box-shadow none
			.middle-block
				border-right 1px solid #000
				border-left 1px solid #000

@media (min-width: 768px)
	.container
		width calc(100% - 30px)
	#content
		#searchResultsHead
			padding-bottom 30px
			.search-filters-top
				font-size 24px
				padding-bottom 5px
@media (min-width 1200px)
	.container
		width 1170px
	.sw-toggled
		#content
			padding 30px 0 30px 280px
			& > .container
				width calc(100% - 30px)
@media (min-width: 992px)
	.container
		width calc(100% - 30px)
#content.affix
	top 50px
	position relative
.img-adaptative
	margin 0 auto
	//width 100%
	max-width 100%
	max-height 220px
	width 100%
	//width auto
